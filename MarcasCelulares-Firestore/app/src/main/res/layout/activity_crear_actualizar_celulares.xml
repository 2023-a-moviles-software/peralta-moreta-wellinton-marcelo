<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CrearActualizarCelulares">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:layout_marginEnd="4dp"
        android:text="ID:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_id_celular"
        app:layout_constraintEnd_toStartOf="@+id/tv_id_celular"
        app:layout_constraintTop_toTopOf="@+id/tv_id_celular"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:text="Modelo:"
        app:layout_constraintBottom_toBottomOf="@+id/tv_modelo_celular"
        app:layout_constraintEnd_toStartOf="@+id/tv_modelo_celular"
        app:layout_constraintTop_toTopOf="@+id/tv_modelo_celular"
        app:layout_constraintVertical_bias="0.326" />

    <EditText
        android:id="@+id/tv_modelo_celular"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_almacenamiento"
        app:layout_constraintEnd_toEndOf="@+id/tv_almacenamiento"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/tv_almacenamiento" />

    <EditText
        android:id="@+id/tv_id_celular"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_modelo_celular"
        app:layout_constraintEnd_toEndOf="@+id/tv_modelo_celular"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_modelo_celular" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="134dp"
        android:layout_height="29dp"
        android:text="Almacenamiento:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_almacenamiento"
        app:layout_constraintEnd_toStartOf="@+id/tv_almacenamiento"
        app:layout_constraintTop_toTopOf="@+id/tv_almacenamiento"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_almacenamiento"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sw_5g"
        app:layout_constraintEnd_toEndOf="@+id/sw_5g"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sw_5g" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="Precio:    $"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_precio"
        app:layout_constraintEnd_toStartOf="@+id/tv_precio"
        app:layout_constraintTop_toTopOf="@+id/tv_precio"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_precio"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_fecha"
        app:layout_constraintEnd_toEndOf="@+id/tv_fecha"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="172dp"
        android:layout_height="32dp"
        android:text="Fecha de Lanzamiento:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fecha"
        app:layout_constraintEnd_toStartOf="@+id/tv_fecha"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_fecha"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_fecha"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardar_celular"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_guardar_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <TextView
        android:id="@+id/tv_marca_celular"
        android:layout_width="217dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:text="MODELO DE CELULAR"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_id_celular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="#6750A3"
        app:layout_constraintBottom_toTopOf="@+id/tv_marca_celular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_modo_celular"
            android:layout_width="221dp"
            android:layout_height="43dp"
            android:text="modo"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:layout_marginEnd="12dp"
        android:text="Modelo:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_modelo_celular"
        app:layout_constraintEnd_toStartOf="@+id/tv_modelo_celular"
        app:layout_constraintTop_toTopOf="@+id/tv_modelo_celular"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/sw_5g"
        android:layout_width="318dp"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:text="¿Tiene tecnología 5G?"
        app:layout_constraintBottom_toTopOf="@+id/tv_precio"
        app:layout_constraintEnd_toEndOf="@+id/tv_precio"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="@+id/tv_precio"
        tools:checked="false" />

</androidx.constraintlayout.widget.ConstraintLayout>