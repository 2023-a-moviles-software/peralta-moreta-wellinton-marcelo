<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MarcasActivity">

    <TextView
        android:id="@+id/tv_title_marcas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARCAS DE CELULARES"
        android:textAllCaps="false"
        android:textColor="#DDD7D7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.048" />

    <ListView
        android:id="@+id/lv_marcas"
        android:layout_width="346dp"
        android:layout_height="313dp"
        android:layout_marginTop="160dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_marcas"
        app:layout_constraintStart_toStartOf="@+id/tv_title_marcas"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_marcas" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <Button
        android:id="@+id/btn_crear_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="AÃ±adir Marca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_marcas"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/lv_marcas"
        app:layout_constraintTop_toBottomOf="@+id/lv_marcas"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:background="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="145dp"
        android:layout_height="156dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_marcas"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/tv_title_marcas"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_marcas"
        app:srcCompat="@drawable/ic_marca_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>