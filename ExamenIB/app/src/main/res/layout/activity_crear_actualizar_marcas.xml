<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CrearActualizarMarcas">

    <TextView
        android:id="@+id/tv_tittleCrearActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARCA DE CELULAR"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textonombre"
        android:layout_width="86dp"
        android:layout_height="26dp"
        android:text="Nombre:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nombre_marca"
        app:layout_constraintEnd_toStartOf="@+id/tv_nombre_marca"
        app:layout_constraintTop_toTopOf="@+id/tv_nombre_marca" />

    <EditText
        android:id="@+id/tv_nombre_marca"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_id" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="63dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:text="País:"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pais"
        app:layout_constraintEnd_toStartOf="@+id/tv_pais"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_marca"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_pais"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_marca"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textonombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_marca" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:text="Año de Creación:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_anio"
        app:layout_constraintEnd_toStartOf="@+id/tv_anio"
        app:layout_constraintTop_toTopOf="@+id/tv_anio"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_anio"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_pais"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_pais"
        app:layout_constraintTop_toBottomOf="@+id/tv_pais" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="144dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:text="Ventas último año:"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ventas"
        app:layout_constraintEnd_toStartOf="@+id/tv_ventas"
        app:layout_constraintTop_toTopOf="@+id/tv_ventas"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_ventas"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_anio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_anio"
        app:layout_constraintTop_toBottomOf="@+id/tv_anio" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="62dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:text="Millones"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ventas"
        app:layout_constraintStart_toEndOf="@+id/tv_ventas"
        app:layout_constraintTop_toTopOf="@+id/tv_ventas"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_guardar_marcas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ventas"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:layout_marginEnd="4dp"
        android:text="ID:"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_id"
        app:layout_constraintEnd_toStartOf="@+id/tv_id"
        app:layout_constraintTop_toTopOf="@+id/tv_id"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tv_id"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittleCrearActualizar"
        android:textAlignment="center" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="412dp"
        android:layout_height="57dp"
        android:background="#6750A3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_modo"
            android:layout_width="218dp"
            android:layout_height="37dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.761" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>