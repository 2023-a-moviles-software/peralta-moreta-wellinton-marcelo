<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutchat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/efecto_eleccion"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="14dp"
    android:paddingRight="8dp"
    android:paddingBottom="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/iv_flecha"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imgContacto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/perfil_m1"
            tools:srcCompat="@drawable/perfil" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="285dp"
                android:layout_height="20dp"
                android:text="Nombre del contacto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hora"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="12:34"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mensaje"
                android:layout_width="293dp"
                android:layout_height="20dp"
                android:text="Mensaje"
                android:textColor="@color/ColorPrimario"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nMensaje"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:background="@drawable/round_background"
                android:gravity="center|top"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>


</LinearLayout>
